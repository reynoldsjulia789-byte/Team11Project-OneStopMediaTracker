<!-- Nav Bar -->
<header id="webHeader">
    <div id="headerInnerFrame">
      <a id="siteName" href="/">NextUp: A One-Stop Media Tracker</a>
      <h1 id="role">Admin</h1>
    </div>

    <nav class="navbar">
        <a class="navButton" href="/users">Users</a>
        <a class="navButton" href="/tracker-entries">User Tracking</a>
        <a class="navButton active" href="/sports-events">Sports</a>
        <a class="navButton" href="/media-items">Other Media</a>
        <a class="navButton" href="/demo-delete">Delete (Test)</a>
        <a class="navButton" href="/reset">Reset Database</a>
    </nav>
</header>

<!-- Main Content -->
<main class="mainView">

    <div class="tableBox">
        <h1 class="tableName">Sports Events</h1>

        <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Sport</th>
                <th>Home Team</th>
                <th>Away Team</th>
                <th>Start Time</th>
                <th>Runtime</th>
                <th>Recording?</th>
                <th>Platform</th>
                <th>
                    <button type="button" class="addButton" data-target="addSportsForm" aria-expanded="false">
                        <img src="/icons/add.svg" alt="Add"/>
                        add
                    </button>
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
                <tr>
                <td>{{this.sportsEventID}}</td>
                <td>{{this.typeOfSport}}</td>
                <td>{{this.homeTeam}}</td>
                <td>{{this.awayTeam}}</td>
                <td>{{this.startTime}}</td>
                <td>{{this.runtimeMins}}</td>
                <td>{{this.recordingIsAvailable}}</td>
                <td>{{this.platform}}</td>
                <td></td>
                </tr>
            {{/each}}
        </tbody>
        </table>
    </div>

    <div class="tableBox hidden" id="addSportsForm" method='POST' action='/sports-events/insert'>
        <h2 class="formName">Add Sports Event</h2>
        <form class="form">
            <label>Type of Sport:
                <input class="textBox" type="text" name="typeOfSport">
            </label><br>
            <label>Home Team:
                <input class="textBox" type="text" name="homeTeam">
            </label><br>
            <label>Away Team:
                <input class="textBox" type="text" name="awayTeam">
            </label><br>
            <label>Start Time:
                <input class="textBox" type="datetime-local" name="startTime">
            </label><br>
            <label>Runtime (mins):
                <input class="textBox" type="number" name="runtimeMins">
            </label><br>
            <label>Recording Available:
                <select class="textBox" name="recordingIsAvailable">
                    <option value="1">true</option>
                    <option value="0">false</option>
                </select>
            </label><br>
            <label>Platform:
                <input class="textBox" type="text" name="platform">
            </label><br>
            <div class="buttonBox">
                <button type="button" class="cancelButton">
                    cancel
                </button>
                <button type="submit" class="doneButton">
                    <img src="/icons/check.svg" alt="Done"/>
                    add sports event
                </button>
            </div>
        </form>
    </div>

    <div class="tableBox hidden" id="updateSportsForm" method='POST' action='/sports-events/update'>
        <h2 class="formName">Update Sports Event</h2>
        <form class="form">
            <label>Sports Event ID:
                <input class="textBox" type="number" name="sportsEventID">
            </label><br>
            <label>Type of Sport:
                <input class="textBox" type="text" name="typeOfSport">
            </label><br>
            <label>Home Team:
                <input class="textBox" type="text" name="homeTeam">
            </label><br>
            <label>Away Team:
                <input class="textBox" type="text" name="awayTeam">
            </label><br>
            <label>Start Time:
                <input class="textBox" type="datetime-local" name="startTime">
            </label><br>
            <label>Runtime (mins):
                <input class="textBox" type="number" name="runtimeMins">
            </label><br>
            <label>Recording Available:
                <select class="textBox" name="recordingIsAvailable">
                    <option value="1">true</option>
                    <option value="0">false</option>
                </select>
            </label><br>
            <label>Platform:
                <input class="textBox" type="text" name="platform">
            </label><br>
            <div class="buttonBox">
                <button type="button" class="cancelButton">
                    cancel
                </button>
                <button type="submit" class="doneButton">
                    <img src="/icons/check.svg" alt="Done"/>
                    update sports event
                </button>
            </div>
        </form>
    </div>

