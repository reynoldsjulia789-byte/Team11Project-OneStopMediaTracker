    <div class="tableBox hidden" id="addUserForm">
        <h2 class="formName">Add User</h2>
        <form class="form">
            <label>Username:
                <input class="textBox" type="text" name="username">
            </label><br>
            <label>Email:
                <input class="textBox" type="email" name="email">
            </label><br>
            <div class="buttonBox">
                <button type="button" class="cancelButton">
                    cancel
                </button>
                <button type="submit" class="doneButton">
                    <img src="/icons/check.svg" alt="Add User"/>
                    add user
                </button>
            </div>
        </form>
    </div>

    <div class="tableBox hidden" id="updateUserForm">
        <h2 class="formName">Update User</h2>
