            </tbody>
        </table>
    </div>

    <div class="tableBox hidden">
        <h2 class="formName">Add User</h2>
        <form class="form" id="addUserForm" method='POST' action='/users/insert'>
            <label>Username:
                <input class="textBox" type="text" name="username">
            </label><br>
            <label>Email:
                <input class="textBox" type="email" name="email">
            </label><br>
            <div class="buttonBox">
                <button type="button" class="cancelButton">
                    cancel
                </button>
                <button type="submit" class="doneButton">
                    <img src="/icons/check.svg" alt="Add User"/>
                    add user
                </button>
            </div>
        </form>
    </div>

    <div class="tableBox hidden">
        <h2 class="formName">Update User</h2>
        <form class="form" id="updateUserForm" method='POST' action='/users/update'>
            <label>User ID:
                <input class="textBox" type="number" name="userID">
            </label><br>
            <label>Username:
                <input class="textBox" type="text" name="username">
            </label><br>
            <label>Email:
                <input class="textBox" type="email" name="email">
            </label><br>
            <div class="buttonBox">
                <button type="button" class="cancelButton">
                    cancel
                </button>
                <button type="submit" class="doneButton">
                    <img src="/icons/check.svg" alt="Done"/>
                    update user
                </button>
            </div>
        </form>
    </div>

