<!-- Main Content -->
<main class="mainView">

    <div class="tableBox">
        <h1 class="tableName">Users</h1>

        <table class="table" id="usersTable">
            <thead class="tableHeader">
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>
                        <button type="button" class="addButton" data-target="addUserForm" aria-expanded="false">
                            <img src="/icons/add.svg" alt="Add"/>
                            add
                        </button>
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                    <tr>
                        <td>{{this.userID}}</td>
                        <td>{{this.username}}</td>
                        <td>{{this.email}}</td>
                        <td>
                            <div class="buttonContainer">
                                <button type="button" class="editButton" data-editTarget="updateUserForm">
                                    <img src="/icons/edit.svg" alt="Edit"/>
                                </button>
                                <form id="deleteUserForm" method='POST' action='/users/delete'>
                                    <input type="hidden" value="{{this.userID}}" name="delete_userID">
                                    <button type="submit" class="deleteButton">
                                        <img src="/icons/delete.svg" alt="Delete"/>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {{/each}}
