<!-- Nav Bar -->
<header id="webHeader">
    <div id="headerInnerFrame">
      <a id="siteName" href="/">NextUp: A One-Stop Media Tracker</a>
      <h1 id="role">Admin</h1>
    </div>

    <div class="navbar">
        <nav>
            <a class="navButton" href="/users">Users</a>
            <a class="navButton" href="/tracker-entries">User Tracking</a>
            <a class="navButton" href="/sports-events">Sports</a>
            <a class="navButton active" href="/media-items">Other Media</a>
        </nav>

        <a class="resetButton" href="/reset">
            <img src="/icons/reset.svg" alt="Reset"/>
            <p>Reset Database</p>
        </a>
    </div>
</header>

<!-- Main Content -->
<main class="mainView">

    {{!-- Table --}}
    <div class="tableBox">
        <h1 class="tableName">Media Items</h1>

        <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Type</th>
                <th>Title</th>
                <th>Released</th>
                <th>Runtime/Pages</th>
                <th>Creator</th>
                <th>Platform</th>
                <th>
                    <button type="button" class="addButton" data-target="addMediaForm" aria-expanded="false">
                        <img src="/icons/add.svg" alt="Add"/>
                        add
                    </button>
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
                <tr>
                    <td>{{this.mediaItemID}}</td>
                    <td>{{this.mediaType}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.releaseDate}}</td>
                    <td>{{this.runtimeMins}}</td>
                    <td>{{this.creator}}</td>
                    <td>{{this.platform}}</td>
                    <td>
                        <div class="buttonContainer">
                            <button type="button" class="editButton" data-edit-target="updateMediaForm" aria-expanded="false">
                                <img src="/icons/edit.svg" alt="Edit"/>
                            </button>
                            <form id="deleteMediaForm" method='POST' action='/media-items/delete'>
                                <input type="hidden" value="{{this.mediaItemID}}" name="delete_mediaItemID">
                                <button type="submit" class="deleteButton">
                                    <img src="/icons/delete.svg" alt="Delete"/>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {{/each}}
        </tbody>
        </table>
    </div>

{{!-- Add Media Form --}}
    <div class="tableBox hidden" id="addMediaForm">
        <h2 class="formName">Add Media Item</h2>
        <form class="form" method='POST' action='/media-items/insert'>
            <label>Media Type:
                <select class="textBox" name="mediaType">
                    <option value="MOVIE">MOVIE</option>
                    <option value="SHOW">SHOW</option>
                    <option value="BOOK">BOOK</option>
                </select>
            </label><br>
            <label>Title:
                <input class="textBox" type="text" name="title">
            </label><br>
            <label>Release Date:
                <input class="textBox" type="datetime-local" name="releaseDate">
            </label><br>
            <label>Runtime (mins) or Pages:
                <input class="textBox" type="number" name="runtimeMins">
            </label><br>
            <label>Creator:
                <input class="textBox" type="text" name="creator">
            </label><br>
            <label>Platform:
                <input class="textBox" type="text" name="platform">
            </label><br>
            <div class="buttonBox">
                <button type="button" class="cancelButton">
                    cancel
                </button>
                <button type="submit" class="doneButton">
                    <img src="/icons/check.svg" alt="Done"/>
                    add media item
                </button>
            </div>
        </form>
    </div>

    {{!-- Update Media Form --}}
    <div class="tableBox hidden" id="updateMediaForm">
        <h2 class="formName">Update Media Item</h2>
        <form class="form" method='POST' action='/media-items/update'>
            <label>Media Item ID:
                <input class="textBox" type="number" name="mediaItemID">
            </label><br>
            <label>Media Type:
                <select class="textBox" name="mediaType">
                    <option value="MOVIE">MOVIE</option>
                    <option value="SHOW">SHOW</option>
                    <option value="BOOK">BOOK</option>
                </select>
            </label><br>
            <label>Title:
                <input class="textBox" type="text" name="title">
            </label><br>
            <label>Release Date:
                <input class="textBox" type="datetime-local" name="releaseDate">
            </label><br>
            <label>Runtime (mins) or Pages:
                <input class="textBox" type="number" name="runtimeMins">
            </label><br>
            <label>Creator:
                <input class="textBox" type="text" name="creator">
            </label><br>
            <label>Platform:
                <input class="textBox" type="text" name="platform">
            </label><br>
            <div class="buttonBox">
                <button type="button" class="cancelButton">
                    cancel
                </button>
                <button type="submit" class="doneButton">
                    <img src="/icons/check.svg" alt="Done"/>
                    update media item
                </button>
            </div>
        </form>
    </div>
    
</main>