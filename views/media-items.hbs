<!-- Nav Bar -->
<header id="webHeader">
    <div id="headerInnerFrame">
      <a id="siteName" href="/">NextUp: A One-Stop Media Tracker</a>
      <h1 id="role">Admin</h1>
    </div>

    <nav class="navbar">
        <a class="navButton" href="/users">Users</a>
        <a class="navButton" href="/tracker-entries">User Tracking</a>
        <a class="navButton" href="/sports-events">Sports</a>
        <a class="navButton active" href="/media-items">Other Media</a>
        <a class="navButton" href="/demo-delete">Delete (Test)</a>
        <a class="navButton" href="/reset">Reset Database</a>
    </nav>
</header>

<!-- Main Content -->
<main class="mainView">

    <div class="tableBox">
        <h1 class="tableName">Media Items</h1>

        <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Type</th>
                <th>Title</th>
                <th>Released</th>
                <th>Runtime</th>
                <th>Creator</th>
                <th>Platform</th>
                <th>
                    <button type="button" class="addButton" data-target="addMediaForm" aria-expanded="false">
                        <img src="/icons/add.svg" alt="Add"/>
                        add
                    </button>
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
                <tr>
                    <td>{{this.mediaItemID}}</td>
                    <td>{{this.mediaType}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.releaseDate}}</td>
                    <td>{{this.runtimeMins}}</td>
                    <td>{{this.creator}}</td>
                    <td>{{this.platform}}</td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
        </table>
    </div>

    <div class="tableBox hidden" id="addMediaForm" method='POST' action='/media-items/insert'>
        <h2 class="formName">Add Media Item</h2>
        <form class="form">
            <label>Media Type:
                <select class="textBox" name="mediaType">
                    <option value="MOVIE">MOVIE</option>
                    <option value="SHOW">SHOW</option>
                    <option value="BOOK">BOOK</option>
                </select>
            </label><br>
            <label>Title:
                <input class="textBox" type="text" name="title">
            </label><br>
            <label>Release Date:
                <input class="textBox" type="datetime-local" name="releaseDate">
            </label><br>
            <label>Runtime (mins):
                <input class="textBox" type="number" name="runtimeMins">
            </label><br>
            <label>Creator:
                <input class="textBox" type="text" name="creator">
            </label><br>
            <label>Platform:
                <input class="textBox" type="text" name="platform">
            </label><br>
            <div class="buttonBox">
                <button type="button" class="cancelButton">
                    cancel
                </button>
                <button type="submit" class="doneButton">
                    <img src="/icons/check.svg" alt="Done"/>
                    add media item
                </button>
            </div>
        </form>
    </div>

    <div class="tableBox hidden" id="updateMediaForm" method='POST' action='/media-items/update'>
        <h2 class="formName">Update Media Item</h2>
        <form class="form">
            <label>Media Item ID:
                <input class="textBox" type="number" name="mediaItemID">
            </label><br>
            <label>Media Type:
                <select class="textBox" name="mediaType">
                    <option value="MOVIE">MOVIE</option>
                    <option value="SHOW">SHOW</option>
                    <option value="BOOK">BOOK</option>
                </select>
            </label><br>
            <label>Title:
                <input class="textBox" type="text" name="title">
            </label><br>
            <label>Release Date:
                <input class="textBox" type="datetime-local" name="releaseDate">
            </label><br>
            <label>Runtime (mins):
                <input class="textBox" type="number" name="runtimeMins">
            </label><br>
            <label>Creator:
                <input class="textBox" type="text" name="creator">
            </label><br>
            <label>Platform:
                <input class="textBox" type="text" name="platform">
            </label><br>
            <div class="buttonBox">
                <button type="button" class="cancelButton">
                    cancel
                </button>
                <button type="submit" class="doneButton">
                    <img src="/icons/check.svg" alt="Done"/>
                    update media item
                </button>
            </div>
        </form>
    </div>

