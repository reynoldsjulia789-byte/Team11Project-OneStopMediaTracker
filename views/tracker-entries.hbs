  <!-- Nav Bar -->
<header id="webHeader">
    <div id="headerInnerFrame">
      <a id="siteName" href="/">NextUp: A One-Stop Media Tracker</a>
      <h1 id="role">Admin</h1>
    </div>

    <nav class="navbar">
        <a class="navButton" href="/users">Users</a>
        <a class="navButton active" href="/tracker-entries">User Tracking</a>
        <a class="navButton" href="/sports-events">Sports</a>
        <a class="navButton" href="/media-items">Other Media</a>
        <a class="navButton" href="/demo-delete">Delete (Test)</a>
        <a class="navButton" href="/reset">Reset Database</a>
    </nav>
</header>

<!-- Main Content -->
<main class="mainView">

    <div class="tableBox">
        <h1 class="tableName">User Tracker Entries</h1>

        <table>
            <thead>
                <tr>
                    <th>entryID</th>
                    <th>userID</th>
                    <th>mediaItemID</th>
                    <th>sportsEventID</th>
                    <th>status</th>
                    <th>savedAt</th>
                    <th>completedAt</th>
                    <th>
                        <button type="button" class="addButton" data-target="addTrackerForm" aria-expanded="false">
                            <img src="/icons/add.svg" alt="Add"/>
                            add
                        </button>
                    </th>
                </tr>
            </thead>
            <tbody> 
                {{#each data}}
                    <tr>
                    <td>{{this.entryID}}</td>
                    <td>{{this.userID}}</td>
                    <td>{{this.mediaItemID}}</td>
                    <td>{{this.sportsEventID}}</td>
                    <td>{{this.status}}</td>
                    <td>{{this.savedAt}}</td>
                    <td>{{this.completedAt}}</td>
                    <td></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div class="tableBox hidden" id="addTrackerForm">
        <h2 class="formName">Add Tracker Entry</h2>
        <form class="form">
            <label>User ID:
                <input class="textBox" type="number" name="userID">
            </label><br>
            <label>Media Item ID (optional):
                <input class="textBox" type="number" name="mediaItemID">
            </label><br>
            <label>Sports Event ID (optional):
                <input class="textBox" type="number" name="sportsEventID">
            </label><br>
            <label>Status:
                <select class="textBox" name="status">
                    <option value="TO_WATCH">TO_WATCH</option>
                    <option value="WATCHING">WATCHING</option>
                    <option value="WATCHED">WATCHED</option>
                </select>
            </label><br>
            <label>Saved At:
                <input class="textBox" type="datetime-local" name="savedAt">
            </label><br>
            <label>Completed At:
                <input class="textBox" type="datetime-local" name="completedAt">
            </label><br>
            <div class="buttonBox">
                <button type="button" class="cancelButton">
                    cancel
                </button>
                <button type="submit" class="doneButton">
                    <img src="/icons/check.svg" alt="Add Tracker Entry"/>
                    add entry
                </button>
            </div>
        </form>
    </div>

    <div class="tableBox hidden" id="updateTrackerForm">
        <h2 class="formName">Update Tracker Entry</h2>
        <form class="form">
            <label>Entry ID:
                <input class="textBox" type="number" name="entryID">
            </label><br>
            <label>Status:
                <select class="textBox" name="status">
                    <option value="TO_WATCH">TO_WATCH</option>
                    <option value="WATCHING">WATCHING</option>
                    <option value="WATCHED">WATCHED</option>
                </select>
            </label><br>
            <label>Completed At:
                <input class="textBox" type="datetime-local" name="completedAt">
            </label><br>
            <div class="buttonBox">
                <button type="button" class="cancelButton">
                    cancel
                </button>
                <button type="submit" class="doneButton">
                    <img src="/icons/check.svg" alt="Update Tracker Entry"/>
                    update entry
                </button>
            </div>
        </form>
    </div>

